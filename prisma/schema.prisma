// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Overview {
  id    Int     @id @default(autoincrement())
  title String  @unique
  slogan  String
  deskripsi String
  nomor_wa String
  text_chat_wa String
  label_wa String
}

model Layanan {
  id    Int     @id @default(autoincrement())
  title String  @unique
  deskripsi String
  layananDetails LayananDetail[]
}

model LayananDetail {
  id    Int     @id @default(autoincrement())
  title String  @unique
  layanan Layanan @relation(fields: [layananId], references: [id])
  layananId Int
}

model Testimoni {
  id    Int     @id @default(autoincrement())
  nama String
  pekerjaan String
  testimoni String
  foto String
}

model Sistem {
  id    Int     @id @default(autoincrement())
  title String  @unique
  deskripsi String
  icon String
}